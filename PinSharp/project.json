{
  "$schema": "http://json.schemastore.org/project",
  "version": "1.2.0-*",
  "title": "PinSharp",
  "authors": [ "Søren Kruse" ],
  "description": "An async wrapper library for the Pinterest API",
  "packOptions": {
    //"summary": "An async wrapper library for the Pinterest API",
    "releaseNotes": "Updated with .NET Core support.",
    "projectUrl": "https://github.com/Krusen/PinSharp",
    "licenseUrl": "https://github.com/Krusen/PinSharp/blob/master/LICENSE.md",
    "iconUrl": "https://raw.githubusercontent.com/Krusen/PinSharp/master/icon.png",
    "requireLicenseAcceptance": false,
    "tags": [
      "pinsharp",
      "pinterest",
      "api",
      "client",
      "wrapper",
      "library"
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Krusen/PinSharp"
    },
    "files": {
      "include": "PinSharp/bin/Release/PinSharp.*"
    }
  },

  "scripts": {
    "postcompile": "dotnet pack --no-build --configuration %compile:Configuration%"
  },

  "buildOptions": {
    "xmlDoc": true
  },

  "dependencies": {
    "Microsoft.CSharp": "4.0.1"
  },

  "frameworks": {
    "net45": {
      "buildOptions": {
        "define": [ "NET45" ]
      },
      "dependencies": {
        "Microsoft.AspNet.WebApi.Client": "5.2.3",
        "Newtonsoft.Json": "7.0.1"
      },
      "frameworkAssemblies": {
        "Microsoft.CSharp": "4.0.0.0",
        "System.Net.Http": "4.0.0.0"
      }
    },
    "netstandard1.3": {
      "imports": [
        "portable-net451+win8"
      ],
      "buildOptions": {
        "define": [ "NETSTANDARD" ]
      },
      "dependencies": {
        //"Microsoft.AspNetCore.Http": "1.0.0",
        "Microsoft.AspNet.WebApi.Client": "5.2.3",
        "Microsoft.CSharp": "4.0.1",
        "NETStandard.Library": "1.6.0",
        "Newtonsoft.Json": "9.0.1",
        "System.Dynamic.Runtime": "4.0.11",
        "System.Linq": "4.1.0",
        "System.Linq.Dynamic": "1.0.6",
        "System.Linq.Expressions": "4.1.0",
        "System.Linq.Queryable": "4.0.1",
        "System.Net.Http": "4.1.0",
        "System.Runtime": "4.1.0",
        "System.Runtime.Extensions": "4.1.0"
      }
    }
  }
}
